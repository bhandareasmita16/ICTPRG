<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIWeek3.MainPage">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="4*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<HorizontalStackLayout Grid.Row="4" Grid.RowSpan="2" Grid.Column="4" Grid.ColumnSpan="2">
			<Button Text="Click Me!" Margin="5"/>
			<Button Text=" Also Click" Margin="5"/>
			<Button Text="Don't Click Me!" Margin="5" IsEnabled="False"/>
		</HorizontalStackLayout>
	</Grid>

</ContentPage>
